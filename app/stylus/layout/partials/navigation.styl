@import '../../utilities/vars'
@import '../../utilities/mixins'

//@import "../libs/rew-sidenav/sidenav.styl"
//@import "../libs/rew-downnav/downnav.styl"

nav
  background $trans
  transitions()
  position fixed
  top 0
  left 0
  right 0
  z-index 1000
  .button
    float right
  +mobile()
    background $white
    .button.scroll-button
      bottom 78px

.logo
  display: block
  max-width 210px
  +mobile()
    max-width 157px
  img
    width 100%

.nav-primary
  padding 25px 40px
  position relative
  z-index 200
  transitions()
  +mobile()
    padding 15px

.nav-secondary
  background $white
  height 100vh
  transform translateY(-200vh)
  transitions()
  position absolute
  top 0
  left 0
  right 0
  z-index 100
  display: flex;
  justify-content: center;
  align-items: center;
  +mobile()
    padding 70px 0 0
  +portrait()
    padding-top 120px

.nav-thirdy
  background $white
  padding-top 9%
  min-height 120vh
  transform translateX(100vw)
  transitions()
  position absolute
  top 0
  left 0
  right 0
  z-index 100
  +portrait()
    padding-top: 20%;
  +mobile()
    padding-top: 20%;

.menu
  display flex
  flex-direction column
  flex-wrap wrap
  li
    margin 9px 0 0
    text-align center
    +mobile()
      margin 9px 0
    a
      display inline-block
      font-weight 700
      line-height: 2.08;
      letter-spacing: 0.9px;
      font-size 1.25em
      color $gray-text4
      &:hover
        color $black-text
      +mobile()
        line-height 1.5
  .active
    a
      color $black-text

.menu.display
  +mobile()
    display none

.menu.mobile
  display none
  +mobile()
    display block

/* BURGER ICON */

#menu-trigger
  display inline-flex
  justify-content center
  align-items center
  margin 17px 0
  +mobile()
    margin 7px 0
    justify-content flex-end
    float right
  .menu-text
    line-height normal
    font-size .875em
    color $black-text
    margin-right 11px
    position relative
    top -1px
  &:hover
    .nav-icon
      span
        &:nth-child(1)
          opacity 1
          transform translateY(7px)
        &:nth-child(2), &:nth-child(3), &:nth-child(4)
          transform translateY(7px)
        &:nth-child(5)
          transform translateY(7px)
          opacity 0

.nav-icon
  width 22px
  height 17px
  position relative
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $black-text
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      opacity 0
      top -7px
    &:nth-child(2)
      top 0
    &:nth-child(3), &:nth-child(4)
      top 7px
    &:nth-child(5)
      top 14px

#form-trigger
  +mobile()
    position fixed
    left 0
    right 0
    bottom 0
    max-width 100%
    border-radius 0
    height 50px
    font-size 1em
    transition none
    z-index 3000
    transform: translate3d(0, 0, 0);
    &:after, &:before
      transition none
    span
      display none

// STATEMENTS
//open-form
body.open-form
  nav
    overflow-y scroll
    overflow-x hidden
    height 100vh
    .nav-thirdy
      transform none
  #form-trigger
    color rgba(9, 98, 45, 0)
    width 50px
    height 50px
    border-radius 50%
    overflow hidden
    position relative
    +mobile()
      top: 6px
      left auto
      right: 15px
      position fixed
    &:hover
      background #09622D
    &:before,
    &:after
      opacity 1
      height: 3px;
      width: 22px
  .button.scroll-button
    bottom auto
  #menu-trigger
    display none

//open nav
body.open-nav
  nav
    +mobile()
      overflow-y scroll
      min-height 100vh
      overflow-x hidden
    .nav-secondary
      transform none
  #menu-trigger
    .nav-icon
      span
        &:nth-child(2), &:nth-child(5)
          top 18px
          width 0%
          left 50%
          opacity 0
        &:nth-child(3)
          transform rotate(45deg)
        &:nth-child(4)
          transform rotate(-45deg)
    &:hover
      .nav-icon
        transform rotate(360deg)
        span
          &:nth-child(1)
            opacity 0
            transform none
          &:nth-child(2), &:nth-child(5)
            top 18px
            width 0%
            left 50%
            opacity 0
          &:nth-child(3)
            transform rotate(45deg)
          &:nth-child(4)
            transform rotate(-45deg)