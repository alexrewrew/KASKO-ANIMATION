@import '../../utilities/vars'
@import '../../utilities/mixins'

.slider
  position relative
  padding-top 40px
  padding-bottom 40px
  .arrow
    position absolute
    top 47%
    transitions()
    cursor pointer
    +mobile()
      top auto
      bottom -27px
      z-index 200
  .arrow-left
    left -66px
    +mobile()
      left 0
    &:hover
      transform translateX(-5px)
  .arrow-right
    right -66px
    +mobile()
      right 0
    &:hover
      transform translateX(5px)

.slick-dots li
  width 10px
  height 10px
  margin 0 10px
.slick-dots li button
  &:before
    background $gray-text
    border-radius 50%
    height 100%
    width 100%
    color $trans
    transitions()
    opacity 1
.slick-dots li.slick-active button
  &:before
    color $trans
    background $orange

