@import '../../utilities/vars'
@import '../../utilities/mixins'

html
  overflow-x hidden
  +displays()
    overflow-y hidden

body
  overflow-x hidden
  font(16px, $black, 400, normal)
  background #fff

.container
  +displays()
    max-width 1170px

#hellopreloader_preload
  display: block;
  position: fixed;
  z-index: 99999;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #00752f url('../img/icon/oval.svg') center center no-repeat;
  background-size: 41px;
