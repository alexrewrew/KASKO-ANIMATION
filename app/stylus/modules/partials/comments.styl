.comments
  padding-top 27px
  padding-bottom 40px

.comment-container
  display flex
  background $gray-back
  padding 31px 37px 42px
  margin 30px 0
  +mobile()
    padding-right 15px
    padding-left 15px
  &--image
    padding-right 28px
    img
      width 75px
      border-radius: 6px;
      +tablet()
        width 65px
      +mobile()
        width 50px
  &--description
    position relative
    &-content
      overflow hidden
      transitions()
    p
      color #828282
      font-size .75em
      line-height: 1.83;
      letter-spacing: 0.5px;
      +mobile()
        font-size .875em
    .link-next
      padding-left 0
      padding-right 30px
      font-size: 1em;
      position absolute
      bottom 0
      +mobile()
        display block
      .fa
        position absolute
        right 0
        font-size 26px
        top 8px

